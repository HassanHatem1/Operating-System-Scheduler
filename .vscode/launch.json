    "version": "0.2.0",
    "configurations": [
        
    {
        "name": "launch process_generator.out",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/process_generator.out",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            },
            {
            
                "description": "Set follow-fork-mode",
                "text": "set follow-fork-mode child",
                "ignoreFailures": true
            }
        ]
    }
    ,
    {
        "name": "Attach scheduler.out",
        "type": "cppdbg",
        "request": "attach",
        "program": "${workspaceFolder}/scheduler.out",
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            },
            {
                "description": "Set follow-fork-mode",
                "text": "set follow-fork-mode child",
                "ignoreFailures": true
            }
        ]
    }]
}